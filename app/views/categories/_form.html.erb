<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>

    <div class="form-group row">
        <%= f.label :name, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter category" %>    
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <%= f.submit(@category.new_record? ? "Save" : "Update", class: 'btn btn-primary') %>
        </div>
    </div>
<% end %>
